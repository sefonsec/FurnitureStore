@model FurnitureStore.Models.Cliente

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>Editar</h2>

@Scripts.Render("~/Scripts/jquery.validate.min.js")
@Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
@Scripts.Render("~/Scripts/jquery.maskedinput.js")

<script type="text/javascript">
    jQuery(function ($) {
        $("#rg").mask("99.999.999-9");
    });

    jQuery(function ($) {
        $("#cpf").mask("999.999.999-99");
    });

    jQuery(function($) {
        $("cep").mask("99.999-999");
    });
</script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cliente</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            <strong>@Html.LabelFor(model => model.dataCadastro)</strong>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.dataCadastro, String.Format("{0:dd/MM/yyyy}", Model.dataCadastro))
            @Html.ValidationMessageFor(model => model.dataCadastro)
        </div>

        <div class="editor-label">
            <strong>@Html.LabelFor(model => model.nome)</strong>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nome)
            @Html.ValidationMessageFor(model => model.nome)
        </div>

        <div class="editor-label">
