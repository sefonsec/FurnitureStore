<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/themes/base/jquery.ui.all.css")

    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/modernizr-2.6.2.js")
    @Scripts.Render("~/Scripts/jquery.ui.datepicker-pt-BR.js")
    @Scripts.Render("~/Scripts/jquery.ui.core.js")
    @Scripts.Render("~/Scripts/jquery.ui.datepicker.js")
    @Scripts.Render("~/Scripts/jquery.ui.widget.js")

</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Furniture Store", "Login", "Account")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                        <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                        <li>@Html.ActionLink("Pedido", "Index", "Pedido")</li>
                        <li>@Html.ActionLink("Formas de Pagto", "Index", "Pagamento")</li>
                        <li>@Html.ActionLink("Nro de Parcelas", "Index", "Parcela")</li>
                        <li>@Html.ActionLink("Vendedor", "Index", "Vendedor")</li>
                        <li>@Html.ActionLink("Usuários", "Index", "Account")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Todos os direitos reservados</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>