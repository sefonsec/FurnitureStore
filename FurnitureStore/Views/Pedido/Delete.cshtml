@model FurnitureStore.Models.Pedido

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>Exclusão</h2>

<h3>Deseja Excluir este Pedido?</h3>
<fieldset>
    <legend>Pedido</legend>
    
    <div class="display-label"><strong>Pedido:</strong> @Html.DisplayFor(model => model.id)</div>
    <div class="display-label"><strong>Vendedor:</strong> @Html.DisplayFor(model => model.Vendedor.nome)</div>
    <div class="display-label"><strong>Cliente:</strong> @Html.DisplayFor(model => model.Cliente.nome)</div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Voltar", "Index")
    </p>
}
