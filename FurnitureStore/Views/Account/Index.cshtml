@model IEnumerable<FurnitureStore.Models.UserProfile>

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Novo Usuário", "Register")
</p>
<table>
    <tr>
        <th>
            Usuário
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Excluir", "Delete", new { id=item.UserId })
        </td>
    </tr>
}

</table>
