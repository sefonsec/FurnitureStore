@model FurnitureStore.Models.Produto

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>Cadastro de Produto</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Produto</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descricao)
            @Html.ValidationMessageFor(model => model.descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.qtde)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.qtde)
            @Html.ValidationMessageFor(model => model.qtde)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idTipoUnidade)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.tipoUnidade, new SelectList(FurnitureStore.Models.Produto.listTipoUnidade, "tipo", "descricao"))
            @Html.ValidationMessageFor(model => model.idTipoUnidade)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.valorUnitario)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.valorUnitario)
            @Html.ValidationMessageFor(model => model.valorUnitario)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/validations_pt-br")
}
